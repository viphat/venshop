<h2 class="bg-primary heading-title">Search Results</h2>
<% if @items.size.zero? %>
  <%= render partial: 'shared/empty', locals: { message: "We don't have any results related to your search." } %>
<% else %>
  <%= render partial: 'shared/horizontal_item', collection: @items, as: :item %>
  <div class="clearfix text-center">
    <%= paginate @items, theme: 'twitter-bootstrap-3' %>
  </div>
<% end %>
