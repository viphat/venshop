<div class="orders-panel">
  <h2 class="bg-primary heading-title">Manage Orders</h2>
  <div class="table-responsive">
    <table class="table table-condensed table-hover">
      <thead>
        <th>ID</th>
        <th>User</th>
        <th>Price</th>
        <th>Status</th>
        <th>Ordered Date</th>
        <th>Action</th>
      </thead>
      <tbody>
        <%= render partial: 'admin/orders/order', collection: @orders, as: :order %>
      </tbody>
    </table>
  </div>
  <div class="clearfix text-center">
    <%= paginate @orders, theme: 'twitter-bootstrap-3'%>
  </div>
  <hr/>
</div>
<% set_meta_tags nofollow: true %>
