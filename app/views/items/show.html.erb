<div class="item-page">
  <h2 class="text-danger"><%= @item.item_name %></h2>
  <div class="col-md-3 col-xs-12">
    <%= image_tag(@item.item_image.url(:large), height: '86', width: '110', alt: @item.item_name) %>
  </div>
  <div class="col-md-9 col-xs-12">
    <p>
      <span class="display-block">
        <label>Item ID:</label><%= @item.id %>
      </span>
      <span class="display-block">
        <label>Price:</label><%= @item.price %>
      </span>
      <span class="display-block">
        <label>Date Added:</label><%= @item.created_at.strftime('%m/%d/%Y') %>
      </span>
    </p>
    <% if policy(@item).update? %>
      <p>
        <%= link_to 'Edit', edit_item_path(@item), class: "btn btn-primary" %>
      </p>
    <% end %>
  </div>
  <div class="clearfix"></div>
  <hr/>
  <div class="col-md-12 col-xs-12 item-description">
    <% if @item.description? %>
      <p><%= raw @item.description.gsub(/\n/, '<br>') %></p>
    <% else %>
      <p>This Item don't have description.</p>
    <% end %>
  </div>
</div>
