<div class="checkout-panel">
  <h2 class="bg-primary heading-title">Checkout</h2>
  <% if @checkout.order_items.size.zero? %>
    <%= render partial: 'shared/empty_cart' %>
  <% else %>
    <div class="col-md-12">
      <%= form_for(@checkout, url: { controller: "checkout", action: "create"},
        html: { class:'form-horizontal', role: 'form' }) do |f| %>
        <div class="text-success mg-b-5">Hi <%= @checkout.name %>. Thanks for you order. Where do you want this order to be delivered to?</div>
        <div class="form-group mg-t-5">
          <label class="control-label col-md-3">Shipping Address:</label>
          <div class="col-md-9">
            <%= f.text_field :address, class: "form-control", placeholder: "Your Shipping Address", required: "required" %>
          </div>
        </div>
        <div class="form-group mg-t-5">
          <%= render partial: 'shared/total_price' %>
        </div>
        <div class="form-group mg-t-5 text-right">
          <%= f.submit "Save", class: "btn btn-primary mg-r-5" %>
          <%= link_to "Cancel Order", order_path(@checkout.order), method: :delete, class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
